<h3 class="text-center">Create A New Hike!</h3>

    <%= form_for [@user, @location, @hike] do |f| %>
        <div class="col-sm-4 col-sm-offset-2">
            <%= f.label :name, "Name of Your Hike:" %>
            <%= f.text_field :name %>
            <br/>
            <br/>
            <%= f.label :date, "When are we hiking?" %>
            <%= f.date_field :date %>
        </div>
        <div id="submit-new" class="col-sm-4 col-sm-offset-2">
            <%= f.submit "Save New Hike" %>
        </div>
        <% end %>
    </div>