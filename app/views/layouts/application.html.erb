<!DOCTYPE html>
<html>
  <head>
    <title>Hiking With Friends</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Poppins" rel="stylesheet">
  </head>
    <div="top">
      <% if current_user %>
        Welcome, <%= current_user.name %>
          &nbsp;&nbsp;|&nbsp;&nbsp;
          <%= link_to 'My Profile', user_path(current_user)%>
          &nbsp;&nbsp;|&nbsp;&nbsp;
          <%= link_to 'Log Out', session_path('dummy'), method: :delete %>
          <% else %>
          &nbsp;&nbsp;
          <%= link_to 'Log In', login_path %>
          &nbsp;&nbsp;|&nbsp;&nbsp;
          <%= link_to 'Sign Up', new_user_path %>
      <% end %>
      </div>
  <body>
    <%= yield %>
        <div id="bottom_nav">
          <p role="home"> <%= link_to "Home", page_path(:home) %></p>
            &nbsp;&nbsp;|&nbsp;&nbsp;
          <p role="about"><%= link_to "About HWF", '/pages/about' %></p>
                &nbsp;&nbsp;|&nbsp;&nbsp;
          <p role="hikes"><%= link_to "Upcoming Hikes", '/hikes' %></p>
        </div>
  </body>
</html>